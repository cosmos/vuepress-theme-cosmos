:root
  for $step in -1...8
    relative-font-weight('--font-weight-bold-'+$step, 'bold', $step)
  for $step in -1...3
    relative-font-weight('--font-weight-medium-'+$step, 'medium', $step)
  for $step in -1...4
    relative-font-weight('--font-weight-normal-'+$step, 'normal', $step)

/*

   FONT WEIGHT

*/

// Note: these values are often overridden when combined with a .tm-rf* class
.tm-normal
  font-weight $font-weight-normal-base
.tm-medium
  font-weight $font-weight-medium-base
  letter-spacing var(--letter-spacing-bold-1) // medium weight doesn't need responsive tracking
.tm-bold
  font-weight $font-weight-bold-base
